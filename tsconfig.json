{
  "compilerOptions": {
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "lib": ["esnext", "DOM"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "module": "esnext",
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "."
  },
  "exclude": ["**/node_modules"],
  "include": ["@types", "src"]
}
